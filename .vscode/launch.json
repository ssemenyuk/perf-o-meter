    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simple",
            "type": "cppdbg",
            "linux": {
                "type": "cppdbg",
                "program": "${workspaceFolder}/bin/simple",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "windows": {
                "type":"cppvsdbg",
                "program": "${workspaceFolder}/bin/simple.exe",
            },
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
        },
